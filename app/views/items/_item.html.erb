<%= turbo_frame_tag dom_id(item) do %>
    <div class="lineitem item-row" data-controller="swipe-cross" data-swipe-cross-target="row">
        <p class="item-body <%= "is-completed" if item.completed? %>"><%= item.body %></p>
        
        <div class="item-actions">
            <%= form_with model: [list, item], method: :patch, class: "item-toggle", data: { swipe_cross_target: "form" } do |f| %>
                <%= f.check_box :completed,
                 checked: item.completed?,
                 id: dom_id(item, :completed),
                 data: { swipe_cross_target: "checkbox" },
                 onchange: "this.form.requestSubmit()" %>
            <% end %>
            
            <%= link_to edit_list_item_path(list, item),
                        data: { turbo_frame: dom_id(item) },
                        class: "item-edit",
                        aria: { label: "Edit item" } do %>
                <i class="fa-regular fa-pen-to-square"></i>
            <% end %>
        </div>
    </div>
<% end %>
