<% content_for :nav_title, "New invite key" %>

<h1>New invite key</h1>

<%= form_with model: @token, url: admin_signup_tokens_path do |f| %>
  <div>
    <%= f.label :label %>
    <%= f.text_field :label %>
  </div>

  <div>
    <%= f.label :max_uses %>
    <%= f.number_field :max_uses, min: 1, value: @token.max_uses || 1 %>
  </div>

  <div>
    <%= f.label :expires_at, "Expires at" %>
    <%= f.date_field :expires_at %>
  </div>

  <%= f.submit "Create" %>
<% end %>

<p><%= link_to "Back", admin_signup_tokens_path %></p>
